LANGUAGE "SIC 1.0".
SCROLL altar_demo
MODE CHANT.

WORK HELLO WITH SIGIL UNUSED AS TEXT:
  SEND BACK "Hello from HELLO WORK.".
ENDWORK.

WORK WHOAMI WITH SIGIL path AS TEXT:
  SEND BACK "You called: " + path + ".".
ENDWORK.

WORK MAIN WITH SIGIL UNUSED AS TEXT:
  SAY: "Raising ALTAR demo.".

  ALTAR AT :15080:
    ROUTE GET "/hello" TO WORK HELLO.
    ROUTE GET "/who"   TO WORK WHOAMI.
  ENDALTAR.
ENDWORK.
